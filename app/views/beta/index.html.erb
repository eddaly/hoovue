<div class="index">
	

<div class="row-1">
	
<% if current_user %>
<div class="container_12 user-messages">
	<% if @unclamied_email_credits  %>

<div class= "activity-feed">
	
		<ul>
	<% @unclamied_email_credits.each do |u| %>
		<li class="<%= cycle('even', 'odd') -%>"><h3><%= u.role %> <%= u.user_id %>on <%= u.product.title %></h3> <span class="right" style="margin-top:-80px;"><%= link_to "Claim Credit >", front_validate_new_email_credit_url(:credit_id => u.id), :class => "blue-btn" %> </span> </li>
	<% end %>
	
</ul> 	
<% else %>

<% end %>



<% if current_user %>
<div class="container_12 user-messages">
	<% if @pending_cv  %>

<div class= "activity-feed">
	
		<ul>
	<% @pending_cv.each do |cv| %>
	
	<% @user = User.find_by_id(cv.user_id) %>
	<% @credit = Credit.find_by_id(cv.credit_id) %>
	<% @user_validator = User.find_by_id(cv.validator_id) %>
	
	<% if @user %>
	<% if @credit %>
	<% @product = Product.find_by_id(@credit.product_id) %>
		<li class="<%= cycle('even', 'odd') -%>"><h3><%= @user_validator.name %> verified you on <%= @product.title %> <span class="right" style="margin-top:-10px;"><%= link_to "Accept    ",  validate_credit_validation_path(cv), :method=>:put %> or <%= link_to '  Delete', cv, method: :delete, data: { confirm: 'Are you sure?' }, :class => "blue-link" %></span></h3> </li>
		<% end %>
		<% end %>
		<% end %>
		
	<% end %>
	
</ul> 	
<% else %>

<% end %>




	</div>
	</div>
	<% end %>
	
	<div class="container_12 row-1-content">
<% if current_user %>
	<div class="grid_3 user-list" style="margin-left:40px;">
		
		<h2>Discover The People</h2>
		<% @users.each do |fu| %>
		<%= link_to user_path(fu.id) do %>
		<%= image_tag fu.profile_picture %>
		<% end %>
		<% end %>
	</div>
	
	<div class="grid_5 user-list-middle">
		
		<h2>Featured</h2>
		<a href="/products/1195">
		<img src="http://i.imgur.com/8heZhND.png" width=235px>
		</a>
	</div>
	
	<div class="grid_3 user-list">
		<h2>Discover Their Work</h2>
		<% @works.each do |w| %>
		<% if w.image.blank? %>
		<% else %>
		<%= link_to product_path(w.id) do %>
		<%= image_tag w.image.thumb %>
		<% end %>
		<% end %>
		<% end %>
	</div>
	
	
	<% else %>
	
		<h1>Who actually makes all the films, games, TV shows, videos, music, design, artwork, websites, comics and other cool stuff you love? </h1>
		<p>Whether you're in the business or a fan, or both, get the insider stories behind the work, from the people who actually make it happen.</p>
		
		
				
		<iframe src="http://player.vimeo.com/video/70016170?byline=0&amp;portrait=0&amp;color=ff0179" width="624" height="351" frameborder="0" webkitAllowFullScreen mozallowfullscreen allowFullScreen></iframe>
		
			<% end %>
	</div>	
	
</div>	

<% if current_user %>
<% else %>
<div class="row-2">
	<div class="container_12 row-2-content">
		<h1>Sign-up or sign-in to WhoActually</h1>
	
		<p>We need to validate your identity so you can claim the creative credits you deserve.</p>

	<p>We will NEVER post anything or contact any of your friends without permission. We'll only use your profile picture (which you can change) and the email address registered to that account to communicate with you.</p>
		<div class="signin">
			<div class="grid_3 push_1">
			 <%= link_to "Sign in With Facebook", "/auth/facebook", id: "facebook" %>
			
			
			 </div>
		</div>	
		
		<div class="grid_2 push_2 or">
			<%= image_tag '/assets/beta/or-circle.png' %>
		</div>	
		<div class="signin">
			<div class="grid_3 push_2">
			
			 <%= link_to "Sign in with LinkedIn", "/auth/linkedin", id: "linkedin" %>
		
			 </div>
		</div>	
	</div>
	<div class="container_12">
		<p>By creating your WhoActually account you agree to our <a>Terms of Use</a> and  <a>Privacy Policy</a></p>
</div>
</div>
<% end %>


<div class="row-3">
	<div class="container_12 slider">
		<h2>Featured Members</h2>
	<% @featured_users.each do |fu| %>
	<% if fu.provider == "facebook" %>
	<%= link_to user_path(fu.id) do %><img src="http://graph.facebook.com/<%= fu.uid%>/picture?type=large"><% end %>
	<% else %>
		<%= link_to user_path(fu.id) do %><%= image_tag fu.picture %><% end  %>
	<% end %>
	<% end %>
	
	</div>	
	
	<div class="container_12 charts">
		<div class="grid_4 push_1 popular">
			<div class="selected">
				Popular Works
			</div>
			
			<ul>
			<% @popular_works.each do |pw| %>
				<li>
			<%= image_tag pw.image %>		
				<div class="title">
					<%= link_to truncate(pw.title, length: 35), product_path(pw) %>
				</div>
				
				<div class="sats">
			
				</div>	
					
				</li>
			<% end %>	
				</ul>	
		</div>	
		
		<div class="grid_4 push_2 popular">
					<div class="selected">
						Recent Credits
					</div>
					
					<ul>
					<% @recent_credits.each do |c| %>
						<% if c.user_id %>
						<% @user = User.find_by_id(c.user_id) %>
						<li>
					<%= image_tag @user.profile_picture %>		
						<div class="title">
							<%= link_to truncate(@user.name, length: 30), user_path(c.user_id) %>
						</div>
				
						<div class="sats">
						<strong>Work:</strong> <%= link_to truncate(c.product.title, length: 30), product_path(c.product.id) %>
						</div>	
					
						</li>
						<% else %>
						
						<% end %>
					<% end %>	
						</ul>	
				</div>	
		
	</div>	
</div>
	


</div>