<h1>Credit Validation</h1>
<div class="container_12">
<div class="white-box">

<h2>Validation Status:</h2>
<% if @credit_validation.validator_id && @credit_validation.validator_id < 10000 %>
<% @user = User.find_by_id(@credit_validation.validator_id) %>
<% end %>
<p><% if @user %>Sent to:<%= @user.name %> <% end %>
	<% if @credit_validation.token %>
	<% if @credit_validation.token.match(/\A[\w+\-.]+@[a-z\d\-.]+\.[a-z]+\z/i) %>
	<%= @credit_validation.token %>
	<% else %>
	Added By Facebook
	<% end %>
	<% else %>
	
	<% end %>
	 on <%= @credit_validation.updated_at.strftime "%A, %B %d, %Y" %></p>
<%= link_to 'Delete pending validation', @credit_validation, :confirm => 'Are you sure?', :method => :delete, :class => "blue-link" %>
<br /><br /><br /><br />


</div>	
</div>