<%= form_for(@credit) do |f| %>
  <% if @credit.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@credit.errors.count, "error") %> prohibited this credit from being saved:</h2>

      <ul>
      <% @credit.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<% if controller.action_name == 'role' %>
   <div class="field">
    <%= f.label :your_role %><br />
    <%= f.text_field :role %>
  </div>
 <% end %> 
 
  <% if controller.action_name == 'edit' %>
  <div class="field">
 <%= f.label :role_description %><br />
   <%= f.text_area :role_desc, :rows => '5'	 %>
   <br/>
 </div>

 <div class="field">
<%= f.label :issue_number_? %><br />
  <%= f.text_field :issue %>
</div>

   <div class="field">
  <%= f.label :interesting_fact %><br />
    <%= f.text_area :fact, :rows => '5'	 %><br/>
	  <strong>You have <em id="count"></em> characters remaining</strong>
  </div>

	<% end %>
	
<% if controller.action_name == 'role' %>
   <%= f.hidden_field :status, :value => 'pending' %>
   <%= f.hidden_field :count, :value => '0' %>
  
   <%= f.fields_for :credit_validations do |builder| %>
     <%= render 'cv_fields', f: builder %>
   <% end %>
   
   <% end  %>
 
 
  <div class="actions">
    <%= f.submit %>
</div>
  
<% end %>

