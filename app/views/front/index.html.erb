
<div class="container_12 index-header">


		<div class="grid_5 omega search">
		<%= form_tag products_path, :method => 'get', :remote => true, :id => "products_list_search" do %>
  <p>
  	
    <%= text_field_tag :search, params[:search], data: {autocomplete_source: Product.order(:title).map(&:title)} %>
		 <%= submit_tag "Search", :name => nil, :class => "search-button" %>   

  </p>
<% end %>





		</div>	
</div>
<% if current_user %>
<div class="container_12 index-middle">
	<div class="grid_12 alpha user-folder">
		<ul id="tabs">
		    <li><a href="#" name="tab1">Your Credits</a></li>
    		<li><a href="#" name="tab2">Your Pending Credits</a></li>
    		<li><a href="#" name="tab3">Your Profile</a></li>  
    		<li><a href="#" name="tab4">Your Work</a></li>  
		</ul>	

				<div id="content"> 
				    <div id="tab1">
			
				    	<ul>
			<% current_user.credits.confirmed.each do |c| %>
			<li class="<%= cycle('even', 'odd') -%>"><% if c.user %> <% end %> <% if c.product.image? %><%= image_tag c.product.image.thumb.to_s %> <%else%> <%= image_tag '/assets/default-credit-small.jpg'%> <%end%>   <%= c.role%> on   <%= link_to c.product.title, product_path(c.product)%><%= link_to 'Edit Credit', edit_credit_path(c), class: "remove-credit" %>    <%= link_to 'Delete Credit', c, method: :delete, class: "remove-credit"  %> </li>
			<%end%>	
		</ul>
		
				    </div>
				    <div id="tab2">
						    	<ul>
			<% current_user.credits.pending.each do |c| %>
				<li class="<%= cycle('even', 'odd') -%>"><% if c.user %> <% end %> <% if c.product.image? %><%= image_tag c.product.image.thumb.to_s %> <%else%> <%= image_tag '/assets/default-credit-small.jpg'%> <%end%>   <%= c.role%> on   <%= link_to c.product.title, product_path(c.product)%><%= link_to 'Edit Credit', edit_credit_path(c), class: "remove-credit" %>    <%= link_to 'Delete Credit', c, method: :delete, class: "remove-credit"  %> </li>
			<%end%>	
		</ul> 
				    </div>
				    <div id="tab3">
				    <ul>
				    <li>Registered Name: <strong> <%= current_user.name%></strong></li><br />
				    <li>Your E-mail: <strong><%= current_user.email%></strong></li><br />
				    <li>Registered by: <strong><%= current_user.provider%></strong></li><br />
				     <li>Current Number Of Credits: <strong><%= current_user.credits.count %></strong></li>
				    
				    </ul>	
				    </div>
				    
				    <div id="tab4">
				  <% if current_user.products %>
				    	    	<ul>
			<% current_user.products.each do |p| %>
			<li class="<%= cycle('even', 'odd') -%>"><%= link_to p.title, product_path(p)%><span class="right"> <% if p.product_genre %> Genre: <%= p.product_genre.name %> <%end%> </span> </li>
			<%end%>	
		</ul> 	
			<%else%>
			<h3>No Work Added</h3>
			<%end%>
		<%= link_to 'New Work', new_product_path, :class => 'blue-link' %>
				    </div>
				
				</div>
	</div>
	

</div>

<%else%>
	<div class="container_12 index-welcome">
<h1>Welcome to Hoovue.com</h1>
<p>Hoovue is a crowdsourced database and social network that allows Consumers and Creators to connect directly.</p>

<p>To best make use of Hoovue please <%= link_to "join us via Facebook.", "/auth/facebook", id: "login_with_facebook" %>
 	
	</div>
<%end%>

<div class="product-list">
	<h1>Featured Products</h1>
		<ul class="product-list">
			<% @products_featured.each do |p| %>
		<%= link_to p do %>
<li class="product-list">
	<% if p.image.blank? %>
	<span style="margin-left:30px"><%= image_tag 'default-small.png'%></span>	
	<%else%>
		<%= image_tag p.image.small %>
	<%end%>
<h3> <%= p.title %></h3>

</li>
<%end%><%end%>	
		</ul>
</div>

<div class="container_12 activity-feed">
	<h1>New Credits</h1>
		<ul>
			<% @credits.each do |c| %>
			<% if c.user %>
			<li class="<%= cycle('even', 'odd') -%>"><span class="timesince"><%= time_ago_in_words(c.created_at) %></span> <%= link_to c.user.name, user_path(c.user) %> <img src="http://graph.facebook.com/<%= c.user.uid%>/picture?type=square"><span class="plus">+</span>  <% if c.product.image? %><%= image_tag c.product.image.thumb.to_s %><%end%>  <%= link_to c.product.title, product_path(c.product)%>  <span class="right">Credit Added</span></li>
			<%else%>
			<%end%>
			<%end%>	
		</ul>
</div>
