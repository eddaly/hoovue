<div class="container_12 pages">
	<h1>Stats Users</h1>

	<h1>Listing users</h1>

	<table>
	  <tr>
	    <th>Name</th>
	    <th>Credits Count</th>
		  <th>Credit validations in</th>
	 <th>Credit validations sent</th>
	    <th>Date opend</th>
	    <th>Date of last visit</th>
		<th>Revisted</th>
	  </tr>

	<% @users.each do |u| %>
	<% @cvrec = CreditValidation.where(:user_id => u.id) %>
	<% @cvsent = CreditValidation.where(:validator_id => u.id) %>
	  <tr>
	    <td><%= link_to u.name, users_path(u.id) %></td>
	    <td><%= u.credits.count %></td>
		<td><%= @cvrec.count %></td>
		<td><%= @cvsent.count %></td>
		  <td><%= u.created_at.strftime("%d %m %y") %></td>
	    <td><%= u.updated_at.strftime("%d %m %y") %></td>
		<td><% if u.created_at == u.updated_at %><% else %> Y<% end %></td>
	    <td></td>
	    <td></td>
	    <td></td>
  
	  </tr>
	<% end %>
	</table>

	<br />
	
	<h1>Listing validations</h1>

	<table>
	  <tr>
	    <th>Name</th>
		<th>Credit ID</th>
		<th>Status</th>
		<th>Created at</th>
	  </tr>

	<% @cv.each do |c| %>

	  <tr>
	    <td><%= link_to c.user_id, users_path(c.user_id) %></td>
		<td><%= c.credit_id %>
		<td><%= c.status %></td>
	
		  <td><%= c.created_at.strftime("%d %m %y") %></td>
	  
	  
		
	    <td></td>
	    <td></td>
	    <td></td>
  
	  </tr>
	<% end %>
	</table>

	<br />
	


<h3>Total Number of Users:</h3>	
<h2><%= @users_total %></h2>

<h3>Total Number of Users with at least 1 credit:</h3>
<h2><%= @users_with_credits %></h2>

<h3>Conversion Percentage:</h3>
<h2><%= @users_with_credits_percentage %>%</h2>

<h3>Percentage Registered with Facebook</h3>
<h2><%= @users_with_facebook_percentage %>%</h2>

<h3>New users in the:</h3>
<h2>Last day: <%= @users_last_day %>, Last week: <%= @users_last_week %>, Last month: <%= @users_last_month %></h2>

<h3>Percentage with Bio</h3>
<h2><%= @users_with_bio_percentage %>%</h2>

<h1>Stats Credits</h1>

<h3>Total Number of Credits:</h3>	
<h2><%= @credits_total %></h2>

<h3>Total Number of Credits with at least 1 verifier:</h3>
<h2><%= @credits_with_verifiers %></h2>

<h3>Conversion Percentage:</h3>
<h2><%= @credits_with_verifiers_percentage %>%</h2>

<h3>New Credits in the:</h3>
<h2>Last day: <%= @credits_last_day %>, Last week: <%= @credits_last_week %>, Last month: <%= @credits_last_month %></h2>


<h1>Stats Credit Verifications</h1>
<h3>Total number of Credit Verifications sent out</h3>
<h2><%= @cv_total %></h2>

<h3>Total of confirmed Credit Verifications</h3>
<h2><%= @cv_confirmed %></h2>

<h3>Conversion Percentage:</h3>
<h2><%= @cv_percentage %>%</h2>

<h3>New Credit Verifications in the:</h3>
<h2>Last day: <%= @credits_v_last_day %>, Last week: <%= @credits_v_last_week %>, Last month: <%= @credits_v_last_month %></h2>





</div>