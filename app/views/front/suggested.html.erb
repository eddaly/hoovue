<div class="container_12 pages">
	<div class="grid_12">
		
	
	<h1>Other suggested works:</h1>
	<div class="suggested">
		<ul>
			<% @suggested.each do |p| %>
				<%= link_to product_path(p) do %>
				<li>				
					<%= image_tag p.image %><br />
					<h3><%= p.title %></h3><br />
					<p>Add Credit +</p>
		
				</li>
				<% end %>
			<% end %>
		</ul>
		</div>
		
		<div class="grid_12">
		<h2><%= link_to product_path(@product.id) do %>Return to <%= @product.title %><% end %></h2>
		</div>
		</div>
	</div>
</div>
	
