<html>
<head>
  <title>whoactually | Credited with Intelligence</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <link rel="shortcut icon" href="/assets/favicon.ico" />
  <script type="text/javascript">var _sf_startpt=(new Date()).getTime()</script>
  <script type="text/javascript">  $(document).ready(function() { $(".select-advanced").select2({ width: 'element' }); }); </script>
</head>


<body class="new">
	<div class="header-container">
		<div class="container_12 header-content">
			<div class="grid_3 logo">
				<div class="icon">
				<a href="/">	<%= image_tag '/assets/beta/logo-icon.png' %> </a>
				</div>	
				<div class="wa">
			<a href="/">	<%= image_tag '/assets/beta/logo-wa.png' %> </a>
				</div>	
		</div>	
		
			<div class="divider">
			<%= image_tag '/assets/beta/divider.png' %>
			</div>
			<div class="grid_2 drop-down">
			<ul>
				<li>All Categories <%= image_tag '/assets/beta/arrow.png' %></li>
				
			</ul>	
			</div>
			
			<div class="divider">
			<%= image_tag '/assets/beta/divider.png' %>
			</div>
			
			<div class="grid_4 search">
			<%= form_tag search_credits_path, :method => 'get' do %>
			  <%= text_field_tag :search, params[:search] %>
					 <%= submit_tag "", :name => nil, :class => "search-button" %>   
			<% end %>
			</div>
			
			<div class="divider">
			<%= image_tag '/assets/beta/divider.png' %>
			</div>
			
			 <% if current_user %>
			<div class="grid_2 name">
			<%= link_to user_path(current_user) do %><%= current_user.name %><%end%>
			</div>
			
			<div class="divider">
			<%= image_tag '/assets/beta/divider.png' %>
			</div>
			
			<%end%>
			
			<div class="grid_1 signin">
				<% if current_user %>
				
				<%= link_to "Sign out", signout_path %> 
				
				<% else %>
				
				<%= link_to "Sign In", "/auth/facebook", id: "login_with_facebook" %>
				
				<% end %>
			</div>	
			
			<div class="divider">
			<%= image_tag '/assets/beta/divider.png' %>
			</div>
				
			
			
			
		
			
			
			
			
		</div>	
	</div>	



	<% if flash[:notice] %>
	      <p class="notice"><%= flash[:notice] %></p>
	    <% end %>
	    <% if flash[:error] %>
	      <p class="error"><%= flash[:error].join(", ") %></p>
	    <% end %>
	<div class="body-wrapper">
		
		
	
	
<%= yield %>

	</div>
</body>	

</html>
