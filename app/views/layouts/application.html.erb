<!DOCTYPE html>
<html>
<head>
  <title>Hoo</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  
</head>
<%= render '/layouts/google_analytics'%>
<body>
		<div class="wrapper">
			<div class="header">	
				<div class="logo">
					<a href="/">
					<%= image_tag 'hv-logo.png'%>
					</a>
				</div>
				<div class="user-navi">
  <% if current_user %>
  
   <div class="signed-in">
   <div class="signed-in-text">Signed in as <strong><a href="/users/<%= current_user.id%>"><%= current_user.name %></a> | <%= link_to "Sign out", signout_path %> </div><img src="http://graph.facebook.com/<%= current_user.uid%>/picture?type=square"></strong>

 
 	</div>

  <% else %>
  	<div class="login">
    <%= link_to "", "/auth/facebook?state='123'", id: "login_with_facebook" %>
 		</div>
  <% end %>
  
				</div>
			</div>
	<div class="container_12 main-navi">
		<ul>
		<li><a href="/">Home</a></li>
		 <% if current_user %>
		<li><a href="/users/<%= current_user.id%>">My Profile</a></li>
		
		<%end%>
		
		</ul>	
		</div>		

<div class="container_12 yield-wrapper">
<%= yield %>
</div>
	<div class="footer">
		&copy; Copyright Hoovue Ltd 2013 | <a href="/legal">Legal</a> | <a href="/">Terms of Use</a> | <a href="/"> Privacy policy</a> | <a href="/">Contact Us</a>
	</div>
</body>
</html>
