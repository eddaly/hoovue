<!DOCTYPE html>
<html>
<head>
  <title>hoovue.com | Credited with Intelligence</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <script type="text/javascript">var _sf_startpt=(new Date()).getTime()</script>
</head>
<%= render '/layouts/google_analytics'%>
<body>
		<div class="wrapper">
			<div class="container_12 header">	
				<div class="logo">
					<a href="/">
					hoovue.com
					</a>
				</div>
				<div class="container_12 main-navi">
					<ul>
					<li> <%= image_tag "/assets/home-icon.png"%> <a href="/">Home</a></li>
					 <% if current_user %>
					<li><%= image_tag "/assets/user-icon.png"%><a href="/users/<%= current_user.id%>">My Profile</a></li>
					<li><%= image_tag "/assets/plus-icon.png"%><a href="/credits/search">Add a Credit</a></li>
		
					<% if current_user.role == "admin" %>
			<li><%= link_to 'Admin', rails_admin_path %> </li>
			<%end%>
						
					<%end%>
				
							
					</ul>	
					</div>		
				<div class="user-navi">
  <% if current_user %>
  
   <div class="signed-in">
   <div class="signed-in-text">Signed in as <strong><a href="/users/<%= current_user.id%>"><%= current_user.name %></a> | <%= link_to "Sign out", signout_path %> </div><img src="http://graph.facebook.com/<%= current_user.uid%>/picture?type=square"></strong>

 
 	</div>

  <% else %>
  	<div class="login">
    <%= link_to "", "/auth/facebook?state='123'", id: "login_with_facebook" %>
 		</div>
  <% end %>
  
				</div>
			</div>
	


<div class="container_12 yield-wrapper">
	<% if flash[:notice] %>
	      <p class="notice"><%= flash[:notice] %></p>
	    <% end %>
	    <% if flash[:error] %>
	      <p class="error"><%= flash[:error] %></p>
	    <% end %>
<%= yield %>

	<div class="footer">
		&copy; 2013 Itsoo Ltd | <a href="/legal">Legal</a> | <a href="/terms">Terms of Use</a> | <a href="/privacy"> Privacy policy</a> | <a href="mailto:contact@hoovue.com">Contact Us</a> | Release: <%= ENV['rel'] %>
	</div>
	</div>
	<script type="text/javascript">
	  var _sf_async_config = { uid: 47509, domain: 'alpha.hoovue.com', useCanonical: true };
	  (function() {
	    function loadChartbeat() {
	      window._sf_endpt = (new Date()).getTime();
	      var e = document.createElement('script');
	      e.setAttribute('language', 'javascript');
	      e.setAttribute('type', 'text/javascript');
	      e.setAttribute('src','//static.chartbeat.com/js/chartbeat.js');
	      document.body.appendChild(e);
	    };
	    var oldonload = window.onload;
	    window.onload = (typeof window.onload != 'function') ?
	      loadChartbeat : function() { oldonload(); loadChartbeat(); };
	  })();
	</script>
</body>
</html>
