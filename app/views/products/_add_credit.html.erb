 <%= @product.genre %>
<div class="new-credit">
	<%= form_for(@credit) do |f| %>
  <% if @credit.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@credit.errors.count, "error") %> prohibited this credit from being saved:</h2>

      <ul>
      <% @credit.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
 <div class="role">
 <h2>Your role was: <%= f.text_field :role %> on <%= @product.title %><% if @product.image.blank? %>
		<%= image_tag 'default-thumb.png'%>
	<%else%>
		<%= image_tag @product.image.small %>
	<%end%></h2>
  </div>
  
  <% if @product.product_genre.name == "Game" %>
   <div class="desc">
<p class="small">Please include details of platform formats, a period of time for an online game, or other such details that relate to this credit.  If the credit doesn't relate to specific versions you could leave it blank.</p>
   <%= f.text_field :issue %>
 </div>
 <% end %>
 

 
	  <% if @product.product_genre.name == "Comic" %>
	   <div class="desc">
<p class="small">Please include details of the range of issues or other information for which your credit relates.</p>
	   <%= f.text_field :issue %>
<p class="small">Please also include a date range where you worked on this Comic.</p>	   
    <%= f.date_select :startdate, :discard_month => true, :start_year => 1980 %> - 
	 <%= f.date_select :enddate, :discard_month => true, :start_year => 1980 %>  
	 </div>
	 <% end %>
 
 
 

 <div class="desc">
Can you tell us more about what you did in your role:  <%= f.text_field :role_desc %>
 </div>
 
   <div class="fact">
<p>Can you tell us one interesting thing about this work:</p>  <%= f.text_area :fact, :rows => '2'	 %>
	<span class="counter"> <strong>You have <em id="count"></em> characters remaining</strong></span>
  </div>
   <%= f.hidden_field :product_id, :value => @product.id %>
     <%= f.hidden_field :user_id, :value => current_user.id %>
	     <%= f.hidden_field :user_name, :value => current_user.name %>
	
   <div class="submit">
    <%= f.submit 'Create Credit >'%>
	</div>
  
<% end %>

	
</div>

