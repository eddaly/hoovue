

	<div class="container_12 credit-feed">
	<h2>Credits</h2>
	<% if @credit_views.empty? %>
	<h3>No Credits Yet.</h3>
	<% end %>
		<ul>
			<% @credit_views.each do |c| %>
		
		<% if c.user %>
			<li class="<%= cycle('even', 'odd') -%>">
			<h2 class="border">
				<img src="http://graph.facebook.com/<%= c.user.uid%>/picture?type=square">
					<%= link_to c.user.name, user_path(c.user) %> 
					<span class="right"> <%= c.role %> 
						<% if current_user %>
							<% if c.user.id == current_user.id  %>
							<%= link_to "(edit)", role_credits_path(:id => c) %>
							<% end %> <% end %>
							<% if c.issue %>
								Issue: <%= c.issue %>
									
								<% end %>

								<div id="openModalemail" class="modalDialog">
									<div>
	
										<a href="#close" title="Close" class="close">X</a>
									<h2>E-mail Credit</h2>
								<%= form_for @credit do |f|%>
									<%= f.label "Their E-mail"%>
									<%= f.text_field :pending_user_email %>
										<%= f.label "What was their role?"%>
									 	<%= f.text_field :role %>
											<%= f.hidden_field :product_id, :value => @product.id %>
											<%= f.hidden_field :current_credit_id, :value => c.id %>
			
												<%= f.submit 'Create Your Credit', :id => 'blue-link' %>
								<%end%>

								</div>

								</div>
							
						</span>
			
			</h2>		

				
					<% c.credit_validations.each do |cv| %>
				
					<% if cv.status == "confirmed" %>
					<span class="score">
					<a href="/credit_validations/<%= cv.id %>"><%= image_tag '/assets/tick.png' %></a>
					</span>
					<% end %>
					<% if cv.status == "pending" %>
					<span class="score">
					<a href="/credit_validations/<%= cv.id %>"><%= image_tag '/assets/pending.png' %></a>
					</span>
					<% end %>
					
					<% end %>
			<br /><br /><br /><br />
						<% if current_user %>
							<% if c.user.id != current_user.id  %>
								<%  @credit_validations = CreditValidation.where(:user_id => current_user.id, :credit_id => c.id) %>
									<% if @user_credits.empty? %>
							<% else %>
					<% if @credit_validations.empty? %>
					<span class="validate">	
					<%= link_to "Validate", increase_credit_path(c), :method=>:put  %>
				</span> 	 <span class="or">
						 or
					</span>	
									<% else %>
							<% end %>
						<% end %> 
					<span class="flag">		
							<%= link_to "Flag", flag_credit_path(c), :method=>:put  %> 
					 </span> 	
				 
						<%end%>  
							<% end %>
							<div class="more-detail">
						
								<h3>Role description <% if current_user %>
					<% if c.user.id == current_user.id  %>
					<%= link_to "(edit)", edit_credit_path(c) %>
					<% end %> <% end %></h3><p><%= c.role_desc %></p>
						
								<h3>Interesting Fact<% if current_user %>
					<% if c.user.id == current_user.id  %>
					<%= link_to "(edit)", edit_credit_path(c) %>
					<% end %> <% end %></h3> <p><%= c.fact %></p>
				</div>
					<% if current_user %>
										<% if c.user.id == current_user.id  %>
					
					<a href="#openModalemail" class="blue-link">Invite someone to validate</a>
					
						
						<% end %>
							<% end %>
						 	
			</li>
			
		<%end%>
							<%end%>	
		</ul>
</div>