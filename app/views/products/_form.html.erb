<%= form_for @product, :validate => true do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<%= f.hidden_field :product_genre_id %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
	<div class="field">
		<%= f.label :category %>
		<%= collection_select(:product, :product_genre_id, ProductGenre.all, :id, :name)%>
	</div>	
	<div class="field">
		<%= f.label :work_status %>
	 <%= f.select :status, [ ['Completed'], ['Ongoing'], ['In Development']] %>
	 </div>
   <div class="field">
    <%= f.label :work_image %><br />
    <%= f.file_field :image %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description, :rows => '5' %>
  </div>
  <div class="field">
    <%= f.label :your_role %><br />
    <%= f.text_field :role %>
  </div>
  <div class="field">
    <%= f.label :role_description %><br />
    <%= f.text_area :role_description, :rows => '5' %>
  </div>
  <div class="field">
    <%= f.label :one_interesting_thing %><br />
    <%= f.text_area :fact, :rows => '5' %>
  </div>
  <div class="actions">
    <%= f.submit "Submit" %>
  </div>
<% end %>
