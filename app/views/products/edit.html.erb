<div class="container_12">

<h1>Update Work</h1>
<div class="white-box">


<%= form_for @product, :validate => true do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

	 <% if params[:name] == "3" %>
  <div class="help-box">The name of the comic is the title of a series.
	  The image used may be of a specific issue, not that which all credits relate to (a range of images and other issue information will be included in due course).

If your work relates to a specific range of issues please include this information within the credit.</div>
    
	 <% end %>
	 
	  <% if params[:name] == "1" %>
	 <div class="help-box">
		 <h4>Help</h4>
		 The name of the game is the title of a released version (alternative titles for the same game in other territories will be included in due course).</div>
	  
		 <div class="help-box">
			 <h4>Help</h4>
	  The image and URL used may relate to a specific version that not all credits will relate to (a range of images and other version information will be included in due course).</div>
 <% end %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :title %>
  </div>


	<div class="field">
		<%= f.label :status %><br />
		
	 <%= f.select :status, [ ['Completed'], ['Ongoing'], ['In Development']] %>
	 </div>
	 
	 <% if params[:name] == "1" %>
     <div class="field">
       <%= f.label :year_the_game_was_first_released %>
	   <%= f.date_select :year, :discard_month => true, :start_year => 1980 %>
     </div>
     <div class="field">
       <%= f.label :studio %>
	   <%= f.text_field :studio %>
     </div>
	 <% end %>
	 
	 <% if params[:name] == "2" %>
     <div class="field">
       <%= f.label :year_the_website_was_launched %>
	
        <%= f.date_select :year, :discard_month => true, :start_year => 1980 %>
     </div>
	 <% end %>

	 
	 <% if params[:name] == "4" %>
     <div class="field">
       <%= f.label :year_the_movie_was_released %>
	
       <%= f.date_select :year, :discard_month => true, :start_year => 1980 %>
     </div>
	 <% end %>
	 
	 <% if params[:name] == "5" %>
     <div class="field">
       <%= f.label :year_the_book_was_published %>
	
       <%= f.date_select :year, :discard_month => true, :start_year => 1980 %>
     </div>
	 <% end %>
	 

  	
   <div class="field">
    <%= f.label :work_page_main_image %><br />
    <%= f.file_field :image %>
  </div>
  <div class="field">
   <%= f.label :youtube_video %><br />
   <%= f.text_field :video %>
 </div>
 <div class="field">
  <%= f.label :work_desription %><br />
  <%= f.text_area :description, :rows => "3" %>
</div>
  <div class="field">
    <%= f.label :url %><br />
    <%= f.text_field :url %>
  </div>

  
  </div>
 
 <%= f.hidden_field :moderation_status, :value => "edited" %>
  
<div class="submit">
 <%= f.submit 'Update Work >'%>
</div>
 

<% end %>
  
  
  
  
  

