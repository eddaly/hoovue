<div class="container_12">
<h1>Welcome to Hoovue</h1>


<h2>Featured Products:</h2>

<%= form_tag products_path, :method => 'get', :remote => true, :id => "products_list_search" do %>
  <p>
  	<%= label_tag 'Search:'%>
    <%= text_field_tag :search, params[:search] %>
     <%= submit_tag "Search", :name => nil, :class => "search-button" %>

  </p>
<% end %>

<div id="products-list"> <%= render '/products/products_list'%></div>
</div>
