<div class="container_12 pages">
<p id="notice"></p>
<div class="grid_8 alpha">
 
<h1><%= @product.title %> <% if current_user %> <% if current_user.id == @product.user_id %><span style="font-size:15px"><%= link_to "(edit)", edit_product_path(@product) %> <% end %> <% end %></span> </h1>
</div>

<div class="grid_4 push_1 omega">
	<% if @product.image.blank? %>
		<%= image_tag 'default-small.png'%>
	<%else%>
		<%= image_tag @product.image.small %>
	<%end%>
</div>

	
<div class="grid_4 omega details">
<h3>Added by:</h3><a href="/users/<%= @product.user.id%>"><%= @product.user.name%></a></p>
<h3>Category</h3><p><% if @product.product_genre %> <%= @product.product_genre.name %> <%end%></p>

<% @product.properties.each do |name, value| %>
<p>
<h3><%= name.humanize %></h3> <%= value %>
</p>
<%end%>

</div>

<div class="container_12 facts-form">

</div>	

<div class="container_12 credits-form">
<%= render '/products/credits'%>
</div>

<% if current_user %>


	<% if @user_credits.empty? %>
	
	<% else %>
	<div class="white-box">

		<%= render 'credited_add' %>
	<%end%>
	</div>	
	
<%end%>

</div>
