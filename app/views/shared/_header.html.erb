<div class="header-container">
  <div class="container_12 header-content">

    <div class="logo grid_9">
      <div class="icon">
      <%= link_to root_url do %>
        <%= image_tag'/assets/beta/logo-icon.png' %>
      <% end %>
      </div>
      <div class="search">
        <%= form_tag search_credits_path, :method => 'get' do %>
          <%= text_field_tag :search, params[:search], :placeholder => "Find a game, person and more..." %>
        <% end %>
      </div>
    </div>

    <% if current_user %>
      <div class="grid_3 name">
        <%= link_to user_path(current_user) do %>
          <%= current_user.name %>
        <% end %>
      </div>
    <% end %>

    <div class="grid_3 signin">
      <% if current_user %>
        <%= link_to "Sign out", signout_path, class: "out" %>
      <% else %>
        <%= link_to "Login / Register", "/auth/facebook", id: "login_with_facebook" %>
      <% end %>
    </div>

  </div>
</div>
