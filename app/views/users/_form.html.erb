<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <div class="error_messages">
      <h2>Form is invalid</h2>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :email_address %>
    <%= f.text_field :email %>
  </div>
  <div class="additional" style="margin-bottom:10px;">
  	
  <%= f.label :addtional_email_addresses %>
 <ul> 
  <% @emails.each do |email| %>
  
     <li><%= email.email %> <%= link_to 'Delete', email, method: :delete, data: { confirm: 'Are you sure?' } %></li>
  	
  <% end %>
  </ul>
 <%= link_to 'Add Additional Email +', new_email_path %>
 <br />
 </div>
 
 <% if @user.picture %>
 <%= image_tag @user.picture.small %>
	<% else %>
	<% if @user.profile_picture %>
	  	<%= image_tag @user.profile_picture %>	 
	 <% end %>
	<% end %> 
  <div class="field">
    <%= f.label :upload_your_own_picture %>
  <%= f.file_field :picture %>
  </div>
  <br />
  <div class="field">
    <%= f.label :tell_us_a_little_about_yourself %>
  <%= f.text_area :bio, :rows => '5' %>
  </div>
  <div class="field">
    <%= f.label :links_to_personal_websites_or_something_you_are_currently_working_on %>
   http:// <%= f.text_field :link %>
   Why this link? <%= f.text_field :link_desc %><br />
   
   http:// <%= f.text_field :link_2 %>
   Why this link? <%= f.text_field :link_2_desc %><br />
   
   http:// <%= f.text_field :link_3 %>
   Why this link? <%= f.text_field :link_3_desc %>
  </div>
  <div class="field">
    <%= f.label :we_can_display_your_twitter_feed_in_your_profile_page_if_you_enter_your_twitter_username_here %>
    @<%= f.text_field :twitter %>
  </div>
  <div class="actions"><%= f.submit "Update", :class => "submit" %></div>
<% end %>