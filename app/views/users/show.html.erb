<div class="container_12 pages">
	
	</div>

	<div class="container_12 profile-header">
		<h1><%= @user.name %> <% if current_user %> <% if current_user.id == @user.id %><span style="font-size:15px"><%= link_to "(edit profile)", edit_user_path(@user) %> <% end %> <% end %> </span></h1> 
		<div class="grid_3 alpha">
<img src="http://graph.facebook.com/<%= @user.uid%>/picture?type=large"><br />
			</div>
			<div class=grid_5>
				<h3>About <% if current_user && current_user.id == @user.id %> 
					me:
					<% else %>
					<%= @user.name %>:
					<% end %>
				</h3>
				
				<p><%= @user.bio %></p>
		<h3><a href="http://<%= @user.link %>"><%= @user.link %></a></h3>
			</div>
			
			<div class="grid_4 omega"  style="margin-top:10px;">
			<% if @user.twitter.blank? %>
			
			<% else %>
			
			<script src="https://widgets.twimg.com/j/2/widget.js"></script>
				<script>
				new TWTR.Widget({
				  version: 2,
				  type: 'profile',
				  rpp: 10,
				  interval: 6000,
				  width: 290,
				  height: 200,
				  theme: {
				    shell: {
				      background: '#808080',
				      color: '#fff',
					  border: '#000'
				    },
				    tweets: {
				      background: '#fff',
				      color: '#000',
				      links: '#000000'
				    }
				  },
				  features: {
				    scrollbar: true,
				    loop: false,
				    live: true,
				    hashtags: true,
				    timestamp: true,
				    avatars: false,
				    behavior: 'all'
				  }
				}).render().setUser('<%= @user.twitter %>').start();
				</script>
			
			
			
			
				<% end %>
			</div>

	</div>

<% for friendship in @user.friendships%>
	<% friendship.friend.name %>  (<%= link_to "unfollow", friendship, :method => :delete %>)    <br />
<%end%>




<div class="container_12 credits-form">
	<h1>Credits</h1>
	<% if @credits.empty? %>
		<% if current_user && current_user.id == @user.id %> 
	<h3>You have no credits.</h3>
		<% else %>
	<h3><%= @user.name%> has no credits.</h3>	
		<% end %>
	<% end %>
<ul>
	<% @credits.each do |c| %>
	<li class="<%= cycle('even', 'odd') -%>">
	<h2><% if c.product.image? %>
			<%= image_tag c.product.image.thumb.to_s %>
				 <%else%> 
			<%= image_tag '/assets/default-credit-small.jpg'%>
	 <%end%>  
	   
	 
	  <%= c.role%><% if current_user %>			
<% if current_user.id == c.user_id %> <%= link_to "(edit)", role_credits_path(:id => c) %> <% end %> <% end %> on   <%= link_to c.product.title, product_path(c.product)%></h2>
		
		
	<%= render '/credits/ticks', :c => c %>
	
<br /><br /><br /><br />
	   
				
<%= render '/credits/more-detail', :c => c %>	


	

<div class="container_12">
	<% if current_user %>			
	<% if current_user.id == c.user_id %>
	<%= link_to 'Delete', c, method: :delete, data: { confirm: 'Are you sure?' }, :class => "blue-link" %>
	<% end %>
	<% end %>
</div>

<%= render '/credits/validate-credit', :c => c %>

<%end%>
	</li>
			
</ul>
</div>




<% if current_user %>
<% if @user.id == current_user.id %>	
<div class="container_12 credits-form">
	<% if @user.products.empty? %>
	<% else %>
	<h1>Works Added By <%= @user.name %></h1>
	<% end %>
	<div class= "activity-feed">
	 
		    	    	<ul>
						
	<% @user.products.each do |p| %>
	<li class="<%= cycle('even', 'odd') -%>"><% if p.image? %><%= image_tag p.image.thumb.to_s %> <%else%> <%= image_tag '/assets/default-credit-small.jpg'%> <%end%>  <%= link_to p.title, product_path(p)%>  <span class="right"><%= link_to "Edit Work", edit_product_path(p), :class => 'blue-link' %> </span> </li>
	<%end%>	
</ul> 	

<%= link_to 'New Work', new_product_path, :class => 'blue-link' %>
	</div>
</div>

<% end %>
<% end %>


		
	

