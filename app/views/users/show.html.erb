<div class="container_12 pages">
	
	</div>

	<div class="container_12 profile-header">
		<h1><%= @user.name %> <% if current_user %> <% if current_user.id == @user.id %><span style="font-size:15px"><%= link_to "(edit profile)", edit_user_path(@user) %> <% end %> <% end %> </span></h1> 
		<div class="grid_3 alpha">
<img src="http://graph.facebook.com/<%= @user.uid%>/picture?type=large"><br />
			</div>
			<div class=grid_5>
				<h3>Bio</h3>
				<% if @credits.empty? %>
				<p>Not filled out yet.</p>
				<% end %>
				<p><%= @user.bio %></p>
		<h3><a href="http://<%= @user.link %>"><%= @user.link %></a></h3>
			</div>
			
			<div class="grid_4 omega"  style="margin-top:10px;">
			<% if @user.twitter.blank? %>
			
			<% else %>
			
			<script src="https://widgets.twimg.com/j/2/widget.js"></script>
				<script>
				new TWTR.Widget({
				  version: 2,
				  type: 'profile',
				  rpp: 10,
				  interval: 6000,
				  width: 290,
				  height: 200,
				  theme: {
				    shell: {
				      background: '#808080',
				      color: '#fff',
					  border: '#000'
				    },
				    tweets: {
				      background: '#fff',
				      color: '#000',
				      links: '#000000'
				    }
				  },
				  features: {
				    scrollbar: true,
				    loop: false,
				    live: true,
				    hashtags: true,
				    timestamp: true,
				    avatars: false,
				    behavior: 'all'
				  }
				}).render().setUser('<%= @user.twitter %>').start();
				</script>
			
			
			
			
				<% end %>
			</div>

	</div>

<% for friendship in @user.friendships%>
	<% friendship.friend.name %>  (<%= link_to "unfollow", friendship, :method => :delete %>)    <br />
<%end%>






<div class="container_12 credits-form">
	<h1>Credits</h1>
	<% if @credits.empty? %>
	<h3>No Credits Yet.</h3>
	<% end %>
<ul>
	<% @credits.each do |c| %>
	<li class="<%= cycle('even', 'odd') -%>">
	<h2><% if c.product.image? %>
			<%= image_tag c.product.image.thumb.to_s %>
				 <%else%> 
			<%= image_tag '/assets/default-credit-small.jpg'%>
	 <%end%>  
	   
	 
	  <%= c.role%><% if current_user %> <% if current_user.id == @user.id %> <%= link_to "(edit)", role_credits_path(:id => c) %> <% end %> <% end %>  on   <%= link_to c.product.title, product_path(c.product)%></h2>
		<% c.credit_validations.each do |cv| %>
				
		<% if cv.status == "confirmed" %>
		<span class="score">
		<a href="/credit_validations/<%= cv.id %>"><%= image_tag '/assets/tick.png' %></a>
		</span>
		<% end %>
			<% if cv.status == "pending" %>
		<span class="score">
		<a href="/credit_validations/<%= cv.id %>"><%= image_tag '/assets/pending.png' %></a>
					
				<% if current_user %>
					<% if current_user.id == cv.validator_id %>
							
					<%= link_to "Validate", validate_credit_validation_path(cv), :method=>:put  %>
				<% end %>
			<% end %>
		<% end %>
		</span>
		<% end %>
<br /><br /><br /><br />
	   
				
		<div class="more-detail">		
		<h3>Role description: <% if current_user %>
<% if c.user.id == current_user.id  %>
<%= link_to "(edit)", edit_credit_path(c) %>
<% end %> <% end %></h3><p> <%= c.role_desc %></p>	
			<h3>Interesting Fact: <% if current_user %>
<% if c.user.id == current_user.id  %>
<%= link_to "(edit)", edit_credit_path(c) %>
</h3><p> <%= c.fact %></p>
		</div>
	

	

<div class="container_12">
<a href="#openModalemail" class="blue-link">Add Validator</a>
<%= link_to 'Delete', c, method: :delete, data: { confirm: 'Are you sure?' }, :class => "blue-link" %>
</div>
<div id="openModalemail" class="modalDialog">
	<div>
		<a href="#close" title="Close" class="close">X</a>
	<h2>E-mail Credit</h2>
<%= form_for @credit do |f|%>
	<%= f.label "Their E-mail"%>
	<%= f.text_field :pending_user_email %>
		<%= f.label "What was their role?"%>
	 	<%= f.text_field :role %>
	 		<%= f.hidden_field :product_id, :value => c.product.id %>
			<%= f.hidden_field :current_credit_id, :value => c.id %>
	 			<%= f.submit 'Create Your Credit', :id => 'blue-link' %>
				
	<% end %> <% end %>
<%end%>
</div>

<%end%>
	</li>
			
</ul>
</div>

<div class="container_12 credits-form">
	<% if @user.products.empty? %>
	<% else %>
	<h1>Works Added By <%= @user.name %></h1>
	<% end %>
	<div class= "activity-feed">
	 
		    	    	<ul>
						
	<% @user.products.each do |p| %>
	<li class="<%= cycle('even', 'odd') -%>"><% if p.image? %><%= image_tag p.image.thumb.to_s %> <%else%> <%= image_tag '/assets/default-credit-small.jpg'%> <%end%>  <%= link_to p.title, product_path(p)%> <% if current_user %> <% if @user.id == current_user.id %> <span class="right"><%= link_to "Edit Work", edit_product_path(p), :class => 'blue-link' %> </span> </li><% end %><%end%>
	<%end%>	
</ul> 	

<% else %>


<% if current_user %>	
<% if @user.id == current_user.id %>	
<%= link_to 'New Work', new_product_path, :class => 'blue-link' %>
<% end %>
<% end %>
	</div>
</div>


		
	

