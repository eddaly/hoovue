<div class="container_12 pages">
	
	</div>

	<div class="container_12 profile-header">
		<h1><%= @user.name %> <% if current_user %> <% if current_user.id == @user.id %><span style="font-size:15px"><%= link_to "(edit profile)", edit_user_path(@user) %> <% end %> <% end %> </span></h1> 
		<div class="grid_3 alpha">
<img src="http://graph.facebook.com/<%= @user.uid%>/picture?type=large"><br />
			</div>
			<div class=grid_5>
				<h3>Bio</h3>
				<p><%= @user.bio %></p>
		<h3><a href="<%= @user.link %>"><%= @user.link %></a></h3>
			</div>
			
			<div class="grid_4 omega"  style="margin-top:10px;">
			<% if @user.twitter.blank? %>
			
			<% else %>
			
			<script src="https://widgets.twimg.com/j/2/widget.js"></script>
				<script>
				new TWTR.Widget({
				  version: 2,
				  type: 'profile',
				  rpp: 10,
				  interval: 6000,
				  width: 290,
				  height: 200,
				  theme: {
				    shell: {
				      background: '#274050',
				      color: '#fff',
					  border: '#000'
				    },
				    tweets: {
				      background: '#fff',
				      color: '#000',
				      links: '#000000'
				    }
				  },
				  features: {
				    scrollbar: true,
				    loop: false,
				    live: true,
				    hashtags: true,
				    timestamp: true,
				    avatars: false,
				    behavior: 'all'
				  }
				}).render().setUser('<%= @user.twitter %>').start();
				</script>
			
			
			
			
				<% end %>
			</div>

	</div>

<% for friendship in @user.friendships%>
	<% friendship.friend.name %>  (<%= link_to "unfollow", friendship, :method => :delete %>)    <br />
<%end%>






<div class="container_12 credits-form">
	<h1>Credits</h1>
		    	<ul>
	<% @credits.each do |c| %>
	<li class="<%= cycle('even', 'odd') -%>"><% if c.product.image? %><%= image_tag c.product.image.thumb.to_s %> <%else%> <%= image_tag '/assets/default-credit-small.jpg'%> <%end%>   <%= c.role%><% if current_user %> <% if current_user.id == @user.id %> <%= link_to "(edit)", role_credits_path(:id => c) %> <% end %> <% end %>  on   <%= link_to c.product.title, product_path(c.product)%> <span style="margin-left:20px">Score: <%= c.count %> </span>
			<p><strong>Role description: <% if current_user %>
<% if c.user.id == current_user.id  %>
<%= link_to "(edit)", edit_credit_path(c) %>
<% end %> <% end %></strong><br /> <%= c.role_desc %></p>	
			<p><strong>Interesting Fact: <% if current_user %>
<% if c.user.id == current_user.id  %>
<%= link_to "(edit)", edit_credit_path(c) %>
<% end %> <% end %></strong> <br /> <%= c.fact %></p>
	
	</li>
	<%end%>	
</ul>
</div>

<% if current_user %>	
<div class="container_12 credits-form">
	<h1>Works Added By You</h1>
	<div class= "activity-feed">
	  <% if current_user.products %>
		    	    	<ul>
	<% current_user.products.each do |p| %>
	<li class="<%= cycle('even', 'odd') -%>"><% if p.image? %><%= image_tag p.image.thumb.to_s %> <%else%> <%= image_tag '/assets/default-credit-small.jpg'%> <%end%>  <%= link_to p.title, product_path(p)%><span class="right"> <% if p.product_genre %> Genre: <%= p.product_genre.name %> <%end%>  <%= link_to "Edit Work", edit_product_path(p), :class => 'grey-link' %> </span> </li>
	<%end%>	
</ul> 	

	<%else%>
	<h3>No Work Added</h3>
	<%end%>
	
<%= link_to 'New Work', new_product_path, :class => 'blue-link' %>
	</div>
</div>

	<% end %>	
	